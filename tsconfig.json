{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",
    "lib": ["ES2019", "DOM"],
    "declaration": true,
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@platform/*": ["./src/platform/*"],
      "@inventory/*": ["./src/inventory/*"]
    },

    "experimentalDecorators": true
  },
  "include": ["./src/**/*", "platform"]
}
