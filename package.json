{
  "name": "distributed-inventory",
  "version": "1.0.0",
  "description": "Distributed inventory service",
  "author": {
    "name": "Jonayet Hossain",
    "email": "jonayet.hossain@adidas.com"
  },
  "license": "MIT",
  "private": true,
  "main": "dist/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "concurrently \"npm:dev:watch\" \"npm:tsoa:watch\" \"npm:start:swagger-ui\"",
    "build": "tsoa spec-and-routes && tsc",
    "start": "concurrently \"npm:start:app\" \"\"npm:start:swagger-ui\"\"",
    "start:swagger-ui": "http-server -s -p 8081 docs",
    "start:app": "node dist/index.js",
    "test": "jest --testPathPattern='.*\\.spec\\.ts$'",
    "lint": "eslint --ext .ts src/",
    "dev:watch": "nodemon --watch src --ignore *.spec.ts --ignore *Controller.ts src/index.ts",
    "tsoa:watch": "nodemon --watch src/inventory/*Controller.ts -x tsoa spec-and-routes"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-server": "^0.12.3",
    "module-alias": "^2.2.2",
    "tsoa": "^3.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
