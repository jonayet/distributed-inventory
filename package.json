{
  "name": "distributed-inventory",
  "version": "1.0.0",
  "description": "Distributed inventory service",
  "author": {
    "name": "Jonayet Hossain",
    "email": "jonayet.hossain@adidas.com"
  },
  "license": "MIT",
  "private": true,
  "main": "dist/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev:watch": "nodemon --watch src --ignore *.spec.ts --ignore *.controller.ts src/index.ts",
    "tsoa:watch": "nodemon --watch src/inventory/controllers/*.controller.ts -x tsoa spec-and-routes",
    "dev": "concurrently \"npm:dev:watch\" \"npm:tsoa:watch\"",
    "start": "node dist/index.js",
    "test": "jest",
    "build": "tsoa spec-and-routes && tsc && copyfiles -f src/inventory/swagger.json dist/inventory"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "swagger-ui-express": "^4.1.5",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsoa": "^3.4.0",
    "typescript": "^4.1.3"
  }
}
