{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/inventory/**/*Controller.ts"],
  "spec": {
    "host": "localhost:8080",
    "schemes": ["http"],
    "specVersion": 3,
    "outputDirectory": "docs",
    "securityDefinitions": {
      "api_key": {
          "type": "apiKey",
          "name": "access_token",
          "in": "query"
      }
    }
  },
  "routes": {
    "routesDir": "src/inventory",
    "authenticationModule": "src/inventory/authentication.ts"
  }
}